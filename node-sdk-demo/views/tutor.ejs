<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <button id="grade" type="button" class="btn btn-primary">Grade</button>
      <button id="feedback" type="button" class="btn btn-secondary">Feedback</button>
    </div>
    <% if (token) { %>
      <script>
        window.woolfOptions = { widget: { renderOnInit: false } }

        document.addEventListener('woolf:created', ({ woolf }) => {
          woolf.widget.show()

          document.getElementById('grade').onclick = function() {
            woolf.trackGrade('').then((id) => {
              console.log(id)
            })
          }

          document.getElementById('feedback').onclick = function() {
            woolf.trackFeedback('').then((id) => {
              console.log(id)
            })
          }
        })
      </script>
      <script src="https://unpkg.com/@woolfuniversity/sdk@latest/build/vanilla.js"
        data-woolf-token="<%= token  %>"
        data-woolf-env="sandbox">
      </script>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>
